# .env

# --- 1. Configuración del Servidor Express ---
PORT=3000

# --- 2. Configuración de PostgreSQL ---
DB_USER=mi_usuario_pg     # Tu usuario de PostgreSQL
DB_HOST=localhost
DB_DATABASE=mi_api_db     # El nombre de la base de datos que vas a crear
DB_PASSWORD=mi_clave_secreta # Tu contraseña de PostgreSQL
DB_PORT=5432

# --- 3. Configuración de Seguridad (Autenticación) ---
# Número de "salt rounds" para bcrypt. 10 es un buen valor por defecto.
SALT_ROUNDS=10 

# La clave secreta para firmar los JWT. ¡Debe ser una cadena larga y aleatoria!
JWT_SECRET=una_clave_super_larga_y_aleatoria_para_jwt